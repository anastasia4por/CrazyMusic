<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Заголовок с отдельным смайликом -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        android:gravity="center">

        <!-- Смайлик отдельно -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎵"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Название приложения -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crazy Music"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            android:fontFamily="@font/montserrat_mediumitalic" />

    </LinearLayout>

    <!-- Кнопка 1 - Оранжевый -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCreate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Создай мелодию"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FDC700"
        app:cornerRadius="12dp"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Кнопка 2 - Синий -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRepeat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Повтори звук"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#2962FF"
        app:cornerRadius="12dp"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Кнопка 3 - Фиолетовый -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSongs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Мои песни"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#AA00FF"
        app:cornerRadius="12dp"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Кнопка 4 - Серый -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSettings"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Настройки"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="#666666"
        app:cornerRadius="12dp"
        android:layout_margin="8dp"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.TonalButton" />

</LinearLayout>