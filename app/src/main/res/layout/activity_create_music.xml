<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <!-- Верхняя панель -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <!-- Кнопка назад -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/back_button_background"
            android:contentDescription="@string/back_button"
            android:elevation="8dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF" />

        <!-- Правая часть с кнопками -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Время записи -->
            <TextView
                android:id="@+id/recordingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <!-- Кнопка записи -->
            <ImageButton
                android:id="@+id/buttonRecord"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_button_background"
                android:contentDescription="@string/record"
                android:src="@drawable/ic_mic" />

            <!-- Кнопка настроек -->
            <ImageButton
                android:id="@+id/buttonSettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/back_button_background"
                android:contentDescription="@string/settings_title"
                android:src="@drawable/ic_settings" />

            <!-- Кнопка информации -->
            <ImageButton
                android:id="@+id/buttonInfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/back_button_background"
                android:contentDescription="@string/info"
                android:src="@drawable/ic_help" />

        </LinearLayout>
    </RelativeLayout>

    <!-- Центральная область с 5 горшками -->
    <LinearLayout
        android:id="@+id/potsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/vegetablesContainer"
        android:layout_below="@+id/topBar"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Первый ряд: 2 горшка -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Горшок 1 с областью для модели -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Область для модели (над горшком) -->
                <FrameLayout
                    android:id="@+id/modelArea1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent" />

                <!-- Сам горшок (узкий) -->
                <FrameLayout
                    android:id="@+id/pot1"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/pot_background" />

            </LinearLayout>

            <!-- Горшок 2 с областью для модели -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:id="@+id/modelArea2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/pot2"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/pot_background" />

            </LinearLayout>

        </LinearLayout>

        <!-- Второй ряд: 1 горшок -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:id="@+id/modelArea3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/pot3"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/pot_background" />

            </LinearLayout>

        </LinearLayout>

        <!-- Третий ряд: 2 горшка -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:id="@+id/modelArea4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/pot4"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/pot_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:id="@+id/modelArea5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/transparent" />

                <FrameLayout
                    android:id="@+id/pot5"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/pot_background" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Нижняя часть с 6 овощами -->
    <GridLayout
        android:id="@+id/vegetablesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="8dp"
        android:layout_marginBottom="0dp">

        <!-- Овощ 1 -->
        <FrameLayout
            android:id="@+id/vegetableCard1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="orange">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_orange"
                android:tag="orange" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetableCard2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="cherry">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cherry"
                android:tag="cherry" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetableCard3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="apple">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_apple"
                android:tag="apple" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetableCard4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="strawberry">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_strawberry"
                android:tag="strawberry" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetableCard5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="pumpkin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pumpkin"
                android:tag="pumpkin" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/vegetableCard6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:tag="grape">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_grape"
                android:tag="grape" />
        </FrameLayout>
    </GridLayout>
</RelativeLayout>